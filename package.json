{
  "name": "InTheatersSoon",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:ios": "react-native run-ios --simulator='iPhone X'",
    "start:devtools": "react-devtools",
    "test": "jest",
